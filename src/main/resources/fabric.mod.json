{
  "schemaVersion": 1,
  "id": "create_unbreakable",
  "version": "${version}",
  "name": "Create Unbreakable Tools",
  "description": "This is an addon mod for Create in Fabric that provides the ability to make your tools unbreakable.",
  "authors": [
    "anvian"
  ],
  "contact": {
    "sources": "https://github.com/anviaan/CreateUnbreakableTools",
    "issues": "https://github.com/anviaan/CreateUnbreakableTools/issues",
    "homepage": "https://modrinth.com/mod/create_unbreakable"
  },
  "license": "GPL-3.0",
  "icon": "assets/create_unbreakable/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.anvian.create_unbreakable.CreateUnbreakableToolsMod"
    ]
  },
  "mixins": [
    "create_unbreakable.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-api": ">=${fabric_api_version}",
    "create": "*",
    "minecraft": "${minecraft_version}"
  },
  "recommends": {
    "create": "${create_version}"
  }
}
